apiVersion: machine.openshift.io/v1beta1
kind: MachineSet
metadata:
  labels:
    machine.openshift.io/cluster-api-cluster: {{ cluster_id }}
  name: {{ cluster_id }}-{{ machineset_name_suffix }}
  namespace: openshift-machine-api
spec:
  replicas: {{ replicas }}
  selector:
    matchLabels:
      machine.openshift.io/cluster-api-cluster: {{ cluster_id }}
      machine.openshift.io/machineset: {{ cluster_id }}-{{ machineset_name_suffix }}
  template:
    metadata:
      labels:
        machine.openshift.io/cluster-api-cluster: {{ cluster_id }}
        machine.openshift.io/machineset: {{ cluster_id }}-{{ machineset_name_suffix }}
    spec:
      metadata:
        labels:
          node-role.kubernetes.io/infra: "" # Label for infra nodes
      # Add taints for infra nodes
      taints:
        - effect: NoSchedule
          key: node-role.kubernetes.io/infra
      providerSpec:
        value:
          apiVersion: awsproviderconfig.k8s.io/v1beta1
          ami:
            id: {{ ami_id }} # Typically fetched from OpenShift installer's built-in AMIs or a custom one
          credentialsSecret:
            name: aws-credentials
          deviceIndex: 0
          iamInstanceProfile:
            id: {{ cluster_id }}-worker-profile
          instanceType: {{ instance_type }}
          kind: AWSMachineProviderConfig
          placement:
            availabilityZone: {{ region }}{{ availability_zone_suffix }} # e.g., us-east-1a
            region: {{ region }}
          publicIP: true
          blockDevices:
            - ebs:
                encrypted: true
                iops: 0
                kmsKey:
                  arn: ''
                volumeSize: 120
                volumeType: gp3
          securityGroups:
            - filters:
                - name: 'tag:Name'
                  values:
                    - {{ cluster_id }}-node
            - filters:
                - name: 'tag:Name'
                  values:
                    - {{ cluster_id }}-lb
          subnet:
            id: {{ subnet_id }}
          tags:
            - name: kubernetes.io/cluster/{{ cluster_id }}
              value: owned
          userDataSecret:
            name: worker-user-data